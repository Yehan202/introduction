 iptables -D FORWARD -i eth1 -m state --state ESTABLISHED -j ACCEPT -m comment --comment "permite entrada de internet"
 iptables -D FORWARD -o eth1 -m state --state NEW,ESTABLISHED -j ACCEPT -m comment --comment "permite SALIDA de internet"


 iptables -A INPUT -i eth1 -m state --state ESTABLISHED -j ACCEPT -m comment --comment "permite entrada de internet que envia desde este servidor"
 iptables -A OUTPUT -o eth1 -m state --state NEW,ESTABLISHED -j ACCEPT -m comment --comment "permite SALIDA de internet desde este servidor"


iptables -A FORWARD -i eth0 -o eth1 -j ACCEPT   # Permite que el tr√°fico vaya de Cliente 2 hacia Server 1
iptables -A FORWARD -i eth1 -o eth0 -m state --state ESTABLISHED,RELATED -j ACCEPT   # Permite respuestas de Server 1 a Cliente 2
